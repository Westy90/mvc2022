{% extends "base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<h1>{{ title }}</h1>

<h1>{{ dump(game.showCardsArray(0)) }}</h1>
<h1>{{ dump(outcome) }}</h1>


<p>The cards that were given to the players: </p>

<table>
    <tr>
        <th>Spelare</th>
        <th>Kort</th>
        <th>Poäng</th>
    </tr>

    {% for i in 0..1 %}
    <tr>
    <td>
        {% if i == 0 %}
        The bank
        {% else %}
        {{i}}
        {% endif %}
    </td>

    <td>
        {% for card in game.showCardsArray(i) %}

            {% for suit, value in card %}

            <div class="card {{ suit }}">

                <img src="{{ asset("img/" ~ suit ~ ".png") }}" alt="{{ suit }}">

                {% if value == 11 %}
                <div class="card_content"> J </div>
                {% elseif value == 12 %}
                <div class="card_content"> Q </div>
                {% elseif value == 13 %}
                <div class="card_content"> K </div>
                {% elseif value == 1 %}
                <div class="card_content"> A </div>
                {% elseif value == 0 %}
                <div class="card_content"> Joker </div>
                {% else %}
                <div class="card_content"> {{ value }} </div>

                {% endif %}
            </div>
        {% endfor %}
        {% endfor %}
        </td>
        <td>
                <p>Om ess är 1: {{game.getSumArray(i)[0]}}</p>
                <p>Om ess är 14: {{game.getSumArray(i)[1]}}</p>

        </td>
    </tr>
    {% endfor %}

</table>

{% if outcome == "won" %}
    You won!
{% elseif outcome == "lost" %}
    You lost!
{% endif %}



<div class="navbar">
    <nav>
        <ul>
            {% if outcome == null %}
                <a href="{{ url("play") }}">New card</a>
            {% endif %}
            <a href="{{ url("stay") }}">Stay</a>
            <a href="{{ url("card-deck-shuffle") }}">Restart</a>
        </ul>
    </nav>
</div>


{% endblock %}
